<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/mylv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ptouxiang_zong"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"/>
        <TextView
            android:text="这是昵称"
            android:textSize="36sp"
            android:id="@+id/pnicen"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="2016"
            android:id="@+id/pshijian"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:textSize="36sp"
        android:id="@+id/pnn_zong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="100"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:id="@+id/pinglunzanshu_zong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_toLeftOf="@id/pinglunzanshu_zong"
            android:id="@+id/pinglunzan_dt"
            android:background="@drawable/zan_selector"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>
</LinearLayout>