<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/mylv"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:padding="3dp"
        android:id="@+id/touxiang"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <TextView
        android:layout_toRightOf="@id/touxiang"
        android:id="@+id/name"
        android:textSize="36sp"
        android:text="实验"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_below="@id/touxiang"
        android:scaleType="centerCrop"
        android:id="@+id/image1"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <ImageView
        android:layout_toRightOf="@id/image1"
        android:layout_below="@id/touxiang"
        android:scaleType="centerCrop"
        android:id="@+id/image2"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <ImageView
        android:layout_below="@id/touxiang"
        android:layout_toRightOf="@id/image2"
        android:scaleType="centerCrop"
        android:id="@+id/image3"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:text="2016"
        android:layout_above="@id/image1"
        android:layout_toRightOf="@id/name"
        android:id="@+id/shijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/neir"
        android:layout_below="@id/image1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:id="@+id/pinglun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/neir"
        android:id="@+id/zantext"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_toLeftOf="@id/zantext"
        android:layout_below="@id/neir"
        android:id="@+id/zan"
        android:layout_marginLeft="10dp"
        android:layout_gravity="right"
        android:background="@drawable/zan_selector"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"/>
    <Button
        android:text="评论"
        android:id="@+id/kanpinglun"
        android:layout_below="@id/neir"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:visibility="gone"
        android:id="@+id/cai"
        android:layout_marginLeft="120dp"
        android:layout_gravity="right"
        android:background="@drawable/cai"
        android:layout_width="80dp"
        android:layout_height="40dp" />
    <TextView
        android:visibility="gone"
        android:id="@+id/caitext"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/pin_s_e"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
        <Button
            android:layout_gravity="bottom"
            android:id="@+id/fspinglun"
            android:text="评论"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:layout_below="@id/zantext"
        android:id="@+id/jiagenduo"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>