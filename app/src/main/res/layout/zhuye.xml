<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/sousuo"
        android:text="这是搜索框"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <android.support.v4.view.ViewPager
        android:background="@color/mylv"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="130dp">
    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="志愿公益"
            android:id="@+id/zhiyuangongyi"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <Button
            android:text="乡村特色"
            android:id="@+id/xiangcuntese"
            android:layout_toLeftOf="@id/zhiyuangongyi"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <Button
            android:id="@+id/shougongzhizhuo"
            android:text="手工制作"
            android:layout_toRightOf="@id/zhiyuangongyi"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <Button
            android:id="@+id/youxijiyi"
            android:text="游戏记忆"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/jiudianpiaowu"
            android:layout_toEndOf="@+id/xiangcuntese" />
        <Button
            android:id="@+id/jiudianpiaowu"
            android:text="酒店票务"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/zhiyuangongyi"
            android:layout_toStartOf="@+id/youxijiyi"
            android:layout_marginTop="28dp" />
        <Button
            android:id="@+id/zhumingjinnqu"
            android:text="著名景区"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_toEndOf="@+id/youxijiyi"
            android:layout_alignBottom="@+id/youxijiyi" />
    </RelativeLayout>
</LinearLayout>